/* 全局基础样式：控制统一页边距与顶部安全距离 */
page {
  min-height: 100vh;
  box-sizing: border-box;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  padding: 24rpx;
  padding-top: calc(24rpx + constant(safe-area-inset-top));
  padding-top: calc(24rpx + env(safe-area-inset-top));
}

/* 通用容器，可保持内容与屏幕边缘的距离 */
.page-wrapper {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 顶部留白，用于放置标题或返回按钮 */
.page-top-gap {
  margin-top: 32rpx;
}

/* 内容块之间的通用间距 */
.section-spacing {
  margin-bottom: 32rpx;
}

/* 用于需要额外顶部安全距离的区域（刘海屏） */
.safe-top-padding {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

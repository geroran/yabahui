/* 容器 */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #000;
}

/* 背景层 */
.bg-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
  animation: ken-burns 20s ease-in-out infinite alternate;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at center, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 100%);
}

@keyframes ken-burns {
  0% { transform: scale(1); }
  100% { transform: scale(1.15); }
}

/* 内容层 */
.content-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  box-sizing: border-box;
}

.text-container {
  text-align: center;
  margin-bottom: 120rpx;
}

.opening-text {
  display: block;
  color: #fff;
  font-size: 36rpx;
  line-height: 1.8;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.6);
  opacity: 0;
  animation: fade-in-up 1.5s ease-out forwards;
}

.line-1 { animation-delay: 0.5s; font-weight: 600; font-size: 40rpx; margin-bottom: 16rpx; }
.line-2 { animation-delay: 1.5s; }
.line-3 { animation-delay: 3.0s; margin-top: 32rpx; font-weight: 600; font-size: 40rpx; }
.line-4 { animation-delay: 4.0s; }

.divider {
  width: 60rpx;
  height: 4rpx;
  background: rgba(255,255,255,0.6);
  margin: 40rpx auto;
  opacity: 0;
  animation: fade-in 1s ease-out 2.5s forwards;
}

@keyframes fade-in-up {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 开始提示 */
.start-prompt {
  position: absolute;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  animation: fade-in 1s ease-out 5.5s forwards;
}

.prompt-text {
  color: rgba(255,255,255,0.8);
  font-size: 28rpx;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.prompt-icon {
  font-size: 48rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

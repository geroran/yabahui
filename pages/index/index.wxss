/* 容器 */
.container {
  min-height: 100vh;
  padding: 60rpx 32rpx 80rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float-circle 20s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 100rpx;
  left: -50rpx;
  animation-delay: 5s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 40%;
  right: 20rpx;
  animation-delay: 10s;
}

@keyframes float-circle {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-30rpx) scale(1.1); }
}

/* 悬浮粒子 */
.particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
  overflow: hidden;
}

.particle {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  bottom: -20rpx;
  animation: float-up linear infinite;
}

@keyframes float-up {
  0% { transform: translateY(0); opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 0.5; }
  100% { transform: translateY(-100vh); opacity: 0; }
}

/* 粒子随机化 */
.particle:nth-child(2n) { animation-duration: 8s; left: 10%; animation-delay: 0s; }
.particle:nth-child(3n) { animation-duration: 12s; left: 30%; animation-delay: 2s; }
.particle:nth-child(4n) { animation-duration: 10s; left: 50%; animation-delay: 4s; }
.particle:nth-child(5n) { animation-duration: 14s; left: 70%; animation-delay: 1s; }
.particle:nth-child(7n) { animation-duration: 9s; left: 90%; animation-delay: 3s; width: 2rpx; height: 2rpx; }
.particle:nth-child(odd) { background: rgba(255, 255, 255, 0.4); }
.particle:nth-child(even) { background: rgba(255, 215, 0, 0.4); }

/* 头部 */
.header {
  margin-bottom: 60rpx;
  text-align: center;
  position: relative;
  z-index: 10;
  animation: fade-in-down 0.8s ease-out;
}

@keyframes fade-in-down {
  from { opacity: 0; transform: translateY(-30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 2rpx;
}

.title-underline {
  width: 100rpx;
  height: 6rpx;
  background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.8), transparent);
  margin: 24rpx auto 0;
  border-radius: 3rpx;
}

/* 游戏列表 */
.game-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  position: relative;
  z-index: 10;
}

/* 游戏卡片 */
.game-card {
  padding: 32rpx 28rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  animation: fade-in-up 0.8s ease-out;
  animation-fill-mode: both;
}

.card-1 {
  animation-delay: 0.2s;
}

.card-2 {
  animation-delay: 0.4s;
}

.card-3 {
  animation-delay: 0.6s;
}

@keyframes fade-in-up {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.game-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

/* 卡片装饰 */
.card-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-radius: 0 28rpx 0 100%;
  pointer-events: none;
}

/* 游戏图标 */
.game-icon {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  font-size: 56rpx;
  opacity: 0.3;
  z-index: 1;
}

/* 游戏内容 */
.game-content {
  position: relative;
  z-index: 2;
  padding-right: 80rpx;
}

.game-title-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.game-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.game-tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(135deg, #ff7a45, #ff4757);
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 69, 0.3);
}

.game-tag-secondary {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.game-tag-tertiary {
  background: linear-gradient(135deg, #52c41a, #13c2c2);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.game-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.7;
}

/* 卡片箭头 */
.card-arrow {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  transition: transform 0.3s ease;
}

.game-card:active .card-arrow {
  transform: translateX(8rpx);
}

/* 底部 */
.footer {
  margin-top: 60rpx;
  text-align: center;
  position: relative;
  z-index: 10;
  animation: fade-in 1s ease-out 0.6s both;
}

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 2rpx;
}

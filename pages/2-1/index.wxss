/* 全局容器：彝族崇尚黑色，以此为底 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(to bottom, #1a1a1a, #2c2c2c);
  color: #fff;
  font-family: sans-serif;
  overflow: hidden;
}

/* 顶部 */
.header {
  display: flex;
  justify-content: space-between;
  padding: 20px;
  align-items: center;
}
.title {
  font-size: 18px;
  font-weight: bold;
  color: #fdd835; /* 彝族黄 */
}
.timer {
  font-size: 20px;
  font-weight: bold;
}
.timer.urgent {
  color: #ff4444;
  animation: pulse 0.5s infinite;
}

/* 场景区 */
.scene-area {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 纯CSS绘制神树 */
.god-tree {
  position: relative;
  z-index: 2;
  margin-bottom: 20px;
}
.tree-crown {
  width: 120px;
  height: 120px;
  background: radial-gradient(circle, #4caf50, #2e7d32);
  border-radius: 50%;
  box-shadow: 0 0 20px rgba(76, 175, 80, 0.4);
}
.tree-trunk {
  width: 30px;
  height: 60px;
  background: #795548;
  margin: -20px auto 0;
  border-radius: 4px;
}

/* 简单的村落背景 */
.village-bg {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  background: linear-gradient(to top, #000, transparent);
  opacity: 0.5;
  z-index: 1;
}

.instruction-text {
  margin-top: 20px;
  font-size: 16px;
  color: #ccc;
  text-align: center;
  height: 24px;
}

/* 操作面板 */
.action-panel {
  padding: 30px 20px;
  background: #333;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15px;
}

.action-item {
  width: 80px;
  height: 90px;
  background: #444;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px solid transparent;
  transition: all 0.2s;
}

.action-item .icon {
  font-size: 32px;
  margin-bottom: 5px;
}
.action-item .name {
  font-size: 12px;
  color: #aaa;
}

/* 状态样式 */
/* 系统高亮演示 */
.action-item.highlight {
  background: #5d4037;
  border-color: #fdd835;
  transform: scale(1.1);
  box-shadow: 0 0 15px #fdd835;
}

/* 玩家已完成 */
.action-item.completed {
  background: #1b5e20; /* 深绿 */
  border-color: #4caf50;
  opacity: 0.6;
}

/* 玩家点击错误 */
.action-item.error {
  background: #b71c1c; /* 彝族红 */
  animation: shake 0.4s;
}

/* 弹窗遮罩 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal {
  width: 80%;
  background: #222;
  border: 2px solid #d32f2f; /* 红色边框 */
  border-radius: 12px;
  padding: 24px;
  text-align: center;
}

.modal-title {
  font-size: 24px;
  font-weight: bold;
  color: #fdd835;
  margin-bottom: 16px;
}

.modal-content {
  color: #eee;
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 24px;
}

.culture-text {
  color: #fdd835;
  font-style: italic;
}

.start-btn {
  background: #d32f2f;
  color: white;
  border-radius: 20px;
  font-weight: bold;
}

/* 动画定义 */
@keyframes shake {
  0% { transform: translateX(0); }
  25% { transform: translateX(-5px); }
  50% { transform: translateX(5px); }
  75% { transform: translateX(-5px); }
  100% { transform: translateX(0); }
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}
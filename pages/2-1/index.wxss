/* 全局容器：神秘森林之夜 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-image: linear-gradient(to bottom, #0f172a, #1e293b);
  color: #e2e8f0;
  font-family: "PingFang SC", "Helvetica Neue", sans-serif;
  overflow: hidden;
  position: relative;
}

/* 背景星星动画 */
.stars {
  position: absolute;
  width: 100%;
  height: 60%;
  top: 0;
  pointer-events: none;
}
.star {
  position: absolute;
  width: 2px;
  height: 2px;
  background-color: white;
  border-radius: 50%;
  opacity: 0.5;
  animation: twinkle 3s infinite ease-in-out;
}
.star-1 { top: 10%; left: 20%; animation-duration: 4s; }
.star-2 { top: 30%; left: 80%; animation-duration: 2s; }
.star-3 { top: 50%; left: 40%; animation-duration: 3s; }
.star-4 { top: 15%; left: 60%; animation-duration: 5s; }
.star-5 { top: 40%; left: 10%; animation-duration: 2.5s; }
.star-6 { top: 70%; left: 90%; animation-duration: 3.5s; }
.star-7 { top: 20%; left: 30%; animation-duration: 4.5s; }
.star-8 { top: 60%; left: 70%; animation-duration: 2.8s; }

.fog {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40%;
  background-image: linear-gradient(to top, rgba(15, 23, 42, 0.9), transparent);
  pointer-events: none;
  z-index: 1;
}

/* 顶部导航 */
.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40px 20px 10px; /* 适配刘海屏 */
  align-items: center;
  z-index: 10;
}

.back-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 6px 12px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  font-size: 14px;
  color: #cbd5e1;
}
.back-arrow { margin-right: 4px; font-size: 12px; }

.title-box {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-size: 18px;
  font-weight: 600;
  color: #fdd835; /* 彝族黄 */
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}
.subtitle {
  font-size: 10px;
  color: #94a3b8;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.timer-container {
  position: relative;
}
.timer-circle {
  width: 40px;
  height: 40px;
  border: 2px solid #fdd835;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0,0,0,0.3);
  box-shadow: 0 0 10px rgba(253, 216, 53, 0.3);
}
.timer-num {
  font-size: 16px;
  font-weight: bold;
  color: #fff;
}
.timer-container.urgent .timer-circle {
  border-color: #ef4444;
  box-shadow: 0 0 15px rgba(239, 68, 68, 0.5);
  animation: pulse-red 0.8s infinite;
}

/* 场景区 */
.scene-area {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.god-tree-container {
  position: relative;
  margin-bottom: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.god-tree {
  position: relative;
  width: 160px;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 神树光环 */
.tree-aura {
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 180px;
  height: 180px;
  background-image: radial-gradient(circle, rgba(76, 175, 80, 0.2), transparent 70%);
  animation: breathe 4s infinite ease-in-out;
  pointer-events: none;
}

.tree-crown {
  position: relative;
  width: 140px;
  height: 120px;
  background-color: #1b5e20;
  border-radius: 60% 60% 50% 50%;
  box-shadow: inset -10px -10px 20px rgba(0,0,0,0.5), 0 5px 15px rgba(0,0,0,0.3);
  z-index: 2;
}
.leaf-cluster {
  position: absolute;
  width: 60px;
  height: 60px;
  background-color: #2e7d32;
  border-radius: 50%;
  top: 10px;
  left: -10px;
  box-shadow: inset -5px -5px 10px rgba(0,0,0,0.3);
}
.leaf-cluster.right {
  left: auto;
  right: -10px;
  top: 20px;
  background-color: #388e3c;
}

.tree-trunk {
  width: 40px;
  height: 80px;
  background-image: linear-gradient(to right, #3e2723, #5d4037, #3e2723);
  margin-top: -20px;
  border-radius: 4px;
  position: relative;
  z-index: 1;
}
/* 树纹 */
.tree-trunk::after {
  content: '';
  position: absolute;
  top: 10px;
  left: 10px;
  width: 20px;
  height: 40px;
  border-radius: 50%;
  border: 2px solid rgba(0,0,0,0.2);
  border-top: none;
  border-bottom: none;
}

.altar-stone {
  width: 180px;
  height: 20px;
  background-color: #444;
  border-radius: 50%;
  margin-top: -10px;
  box-shadow: 0 10px 20px rgba(0,0,0,0.5);
  position: relative;
  z-index: 0;
}

.instruction-box {
  background-color: rgba(0, 0, 0, 0.6);
  padding: 8px 20px;
  border-radius: 20px;
  border: 1px solid rgba(255,255,255,0.1);
}
.instruction-text {
  font-size: 14px;
  color: #e2e8f0;
  letter-spacing: 1px;
}

/* 操作面板 - 祭坛风格 */
.action-panel {
  position: relative;
  padding: 30px 20px 50px;
  background-color: #262626;
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  box-shadow: 0 -10px 30px rgba(0,0,0,0.5);
  z-index: 10;
}
/* 顶部金边 */
.action-panel::before {
  content: '';
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 4px;
  background-color: #444;
  border-radius: 2px;
}

.action-item {
  width: 80px;
  height: 100px;
  /* perspective: 1000px; Removed unsupported property */
  transition: transform 0.2s;
}

.talisman-paper {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.3);
  position: relative;
  overflow: hidden;
  border: 1px solid #d1d1d1;
}
/* 符纸纹理 */
.talisman-paper::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(0,0,0,0.02) 10px, rgba(0,0,0,0.02) 20px);
}
/* 顶部红色印记 */
.talisman-paper::after {
  content: '';
  position: absolute;
  top: 5px;
  width: 20px;
  height: 20px;
  background-color: rgba(211, 47, 47, 0.2);
  border-radius: 50%;
}

.action-item .icon {
  font-size: 36px;
  z-index: 1;
  margin-bottom: 8px;
}
.action-item .name {
  font-size: 12px;
  color: #333;
  font-weight: bold;
  z-index: 1;
  background-color: rgba(255,255,255,0.8);
  padding: 2px 6px;
  border-radius: 4px;
}

/* 状态样式 */
.action-item.highlight {
  transform: translateY(-10px) scale(1.05);
}
.action-item.highlight .talisman-paper {
  box-shadow: 0 0 20px #fdd835;
  border-color: #fdd835;
  background-color: #fffde7;
}

.action-item.completed .talisman-paper {
  background-color: #e8f5e9;
  border-color: #4caf50;
  opacity: 0.8;
}
.action-item.completed .icon {
  filter: grayscale(100%);
  opacity: 0.5;
}

.action-item.error {
  animation: shake 0.4s;
}
.action-item.error .talisman-paper {
  background-color: #ffebee;
  border-color: #ef5350;
}

/* 弹窗 */
.overlay {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  /* backdrop-filter: blur(5px); Removed unsupported property */
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal {
  width: 80%;
  background-color: #1c1917;
  border: 1px solid #444;
  border-radius: 16px;
  padding: 30px 20px;
  text-align: center;
  position: relative;
  box-shadow: 0 20px 50px rgba(0,0,0,0.5);
}
.modal.success { border-color: #fdd835; box-shadow: 0 0 30px rgba(253, 216, 53, 0.2); }
.modal.fail { border-color: #ef4444; }

.modal-title {
  font-size: 26px;
  font-weight: bold;
  color: #fdd835;
  margin-bottom: 20px;
  font-family: "Songti SC", serif; /* 宋体更有韵味 */
}

.modal-content {
  color: #d6d3d1;
  font-size: 15px;
  line-height: 1.8;
  margin-bottom: 30px;
}

.culture-text {
  color: #fdd835;
  font-style: italic;
  font-size: 14px;
  display: block;
  margin-top: 10px;
  padding: 10px;
  background-color: rgba(253, 216, 53, 0.1);
  border-radius: 8px;
}

.start-btn {
  background-image: linear-gradient(to right, #b91c1c, #d32f2f);
  color: white;
  border-radius: 25px;
  font-weight: bold;
  padding: 10px 0;
  box-shadow: 0 4px 15px rgba(211, 47, 47, 0.4);
  border: none;
}
.start-btn:active { transform: scale(0.98); }

/* 动画定义 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5px); }
  75% { transform: translateX(5px); }
}

@keyframes pulse-red {
  0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
  70% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
  100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
}

@keyframes twinkle {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

@keyframes breathe {
  0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.3; }
  50% { transform: translateX(-50%) scale(1.1); opacity: 0.5; }
}

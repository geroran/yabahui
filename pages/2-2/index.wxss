/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #0f172a;
  color: #e2e8f0;
  font-family: "PingFang SC", "Helvetica Neue", sans-serif;
  overflow: hidden;
  position: relative;
}

/* 背景图片组 */
.bg-group {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.8s ease-in-out;
  z-index: 1;
}

/* 第一张图默认显示，作为底图 */
.bg-img:first-child {
  opacity: 1;
  z-index: 0;
}

.bg-img.visible {
  opacity: 1;
  animation: breathe 10s ease-in-out infinite;
}

/* 背景呼吸效果 */
@keyframes breathe {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 氛围滤镜 */
.mood-overlay {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  pointer-events: none;
  z-index: 5;
  transition: background 1s ease, opacity 1s ease;
  opacity: 0;
}

.mood-overlay.warm {
  opacity: 1;
  background: radial-gradient(circle at center, rgba(255, 160, 0, 0.15) 0%, rgba(255, 69, 0, 0.25) 100%);
  mix-blend-mode: screen;
}

.mood-overlay.holy {
  opacity: 1;
  background: radial-gradient(circle at center, rgba(255, 215, 0, 0.15) 0%, rgba(255, 255, 255, 0.2) 100%);
  mix-blend-mode: soft-light;
}

.mood-overlay.dark {
  opacity: 1;
  background: rgba(0, 0, 0, 0.4);
}

/* 悬浮粒子 */
.particles-container {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  pointer-events: none;
  z-index: 6;
  overflow: hidden;
}

.particle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  bottom: -10px;
  animation: float-up linear infinite;
  box-shadow: 0 0 4px rgba(255, 255, 255, 0.8);
}

@keyframes float-up {
  0% { transform: translateY(0) translateX(0); opacity: 0; }
  10% { opacity: 0.8; }
  90% { opacity: 0.5; }
  100% { transform: translateY(-110vh) translateX(20px); opacity: 0; }
}

/* 粒子随机化 */
.particle:nth-child(2n) { animation-duration: 7s; left: 10%; }
.particle:nth-child(3n) { animation-duration: 11s; animation-delay: 1s; left: 30%; }
.particle:nth-child(4n) { animation-duration: 13s; animation-delay: 3s; left: 50%; }
.particle:nth-child(5n) { animation-duration: 9s; animation-delay: 2s; left: 70%; }
.particle:nth-child(7n) { animation-duration: 15s; animation-delay: 0.5s; width: 2px; height: 2px; left: 90%; }
.particle:nth-child(odd) { background: rgba(255, 255, 255, 0.4); }
.particle:nth-child(even) { background: rgba(255, 215, 0, 0.4); }

/* 飞入动画 */
.flying-item {
  position: fixed;
  width: 80px;
  height: 80px;
  z-index: 150;
  pointer-events: none;
  animation: fly-to-center 1.2s cubic-bezier(0.22, 1, 0.36, 1) forwards;
}

@keyframes fly-to-center {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.2);
    opacity: 0;
  }
}

/* 顶部操作栏 */
.top-action-bar {
  position: absolute;
  top: 90px;
  left: 0;
  width: 100%;
  height: 120px;
  z-index: 100;
  overflow: hidden;
}

.action-scroll-wrapper {
  width: 100%;
  height: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  position: relative;
}

.action-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20px;
  height: 100%;
  white-space: nowrap;
  gap: 15px;
}

.action-btn-item {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.7);
  border: 2px solid rgba(255, 255, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0.95;
  flex-shrink: 0;
  position: relative;
  animation: float-btn 3s ease-in-out infinite;
}

@keyframes float-btn {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.action-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  pointer-events: none;
}

/* 高亮状态 */
.action-btn-item.highlight {
  animation: pulse-gold 1.5s infinite;
  z-index: 10;
}

@keyframes pulse-gold {
  0% {
    box-shadow: 0 0 0 0 rgba(253, 216, 53, 0.7);
    transform: scale(1.15);
  }
  70% {
    box-shadow: 0 0 0 15px rgba(253, 216, 53, 0);
    transform: scale(1.2);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(253, 216, 53, 0);
    transform: scale(1.15);
  }
}

/* 完成状态 */
.action-btn-item.completed {
  border-color: #4caf50;
  background-color: rgba(76, 175, 80, 0.3);
  opacity: 0.6;
  transform: scale(0.9);
}

/* 粒子爆发 */
.burst-particles {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  pointer-events: none;
}

.burst-p {
  position: absolute;
  width: 6px;
  height: 6px;
  background-color: #fdd835;
  border-radius: 50%;
  opacity: 0;
  animation: burst-out 0.8s ease-out forwards;
}

.burst-p:nth-child(1) { --x: 60px; --y: 0px; animation-delay: 0s; }
.burst-p:nth-child(2) { --x: 42px; --y: 42px; animation-delay: 0.05s; }
.burst-p:nth-child(3) { --x: 0px; --y: 60px; animation-delay: 0s; }
.burst-p:nth-child(4) { --x: -42px; --y: 42px; animation-delay: 0.05s; }
.burst-p:nth-child(5) { --x: -60px; --y: 0px; animation-delay: 0s; }
.burst-p:nth-child(6) { --x: -42px; --y: -42px; animation-delay: 0.05s; }
.burst-p:nth-child(7) { --x: 0px; --y: -60px; animation-delay: 0s; }
.burst-p:nth-child(8) { --x: 42px; --y: -42px; animation-delay: 0.05s; }

@keyframes burst-out {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 1;
  }
  100% {
    transform: translate(calc(-50% + var(--x)), calc(-50% + var(--y))) scale(0);
    opacity: 0;
  }
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 40px;
  left: 20px;
  z-index: 110;
  display: flex;
  align-items: center;
  padding: 8px 14px;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 20px;
  font-size: 14px;
  color: #cbd5e1;
  border: 1px solid rgba(255,255,255,0.3);
}

.back-arrow { 
  margin-right: 2px; 
  font-size: 24px; 
}

/* 计时器 */
.timer-container {
  position: absolute;
  top: 40px;
  right: 20px;
  z-index: 110;
}

.timer-circle {
  min-width: 60px;
  height: 45px;
  padding: 0 20px;
  border: 2px solid #fdd835;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(20, 20, 20, 0.9));
  box-shadow: 
    0 0 20px rgba(253, 216, 53, 0.4),
    inset 0 2px 10px rgba(255, 255, 255, 0.1);
}

.timer-circle::before {
  content: '⏱';
  font-size: 29px;
  opacity: 0.8;
}

.timer-num {
  font-size: 22px;
  font-weight: bold;
  color: #fdd835;
  text-shadow: 0 0 10px rgba(253, 216, 53, 0.5);
}

.timer-container.urgent .timer-circle {
  border-color: #ef4444;
  background: linear-gradient(135deg, rgba(40, 0, 0, 0.9), rgba(60, 10, 10, 0.95));
  box-shadow: 
    0 0 25px rgba(239, 68, 68, 0.6),
    inset 0 2px 10px rgba(255, 100, 100, 0.2);
  animation: pulse-red 0.8s infinite;
}

.timer-container.urgent .timer-num {
  color: #ff5252;
  text-shadow: 0 0 15px rgba(255, 82, 82, 0.8);
}

@keyframes pulse-red {
  0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
  70% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
  100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
}

/* 底部指引区 */
.instruction-area {
  position: absolute;
  bottom: 120px;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 90;
}

.instruction-box {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 12px 24px;
  border-radius: 30px;
  border: 1px solid rgba(255,255,255,0.15);
  backdrop-filter: blur(4px);
  max-width: 80%;
}

.instruction-text {
  font-size: 15px;
  color: #f1f5f9;
  letter-spacing: 1px;
  text-shadow: 0 1px 2px rgba(0,0,0,0.5);
  text-align: center;
  display: inline-block;
  position: relative;
}

/* 弹窗 */
.overlay {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.modal {
  width: 80%;
  background-color: #1c1917;
  border: 1px solid #444;
  border-radius: 16px;
  padding: 30px 20px;
  text-align: center;
  position: relative;
  box-shadow: 0 20px 50px rgba(0,0,0,0.5);
  animation: fade-in-up 0.5s ease-out;
}

@keyframes fade-in-up {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.modal.success { 
  border-color: #fdd835; 
  box-shadow: 0 0 30px rgba(253, 216, 53, 0.2); 
}

.modal.fail { 
  border-color: #ef4444; 
}

.modal-title {
  font-size: 26px;
  font-weight: bold;
  color: #fdd835;
  margin-bottom: 20px;
  font-family: "Songti SC", serif;
}

.modal-content {
  color: #d6d3d1;
  font-size: 15px;
  line-height: 1.8;
  margin-bottom: 30px;
  white-space: pre-line;
}

.culture-text {
  color: #fdd835;
  font-style: italic;
  font-size: 14px;
  display: block;
  margin-top: 10px;
  margin-bottom: 20px;
  padding: 10px;
  background-color: rgba(253, 216, 53, 0.1);
  border-radius: 8px;
}

.start-btn {
  background-image: linear-gradient(to right, #b91c1c, #d32f2f);
  color: white;
  border-radius: 25px;
  font-weight: bold;
  padding: 10px 0;
  box-shadow: 0 4px 15px rgba(211, 47, 47, 0.4);
  border: none;
}

.start-btn:active { 
  transform: scale(0.98); 
}

/* 全局：彝族漆器黑底风格 + 舞台感 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #1a1a1a;
  color: #fff;
  font-family: "PingFang SC", sans-serif;
  overflow: hidden;
  position: relative;
}

/* 舞台幕布装饰 */
.stage-curtain {
  position: absolute;
  top: 0;
  width: 40px;
  height: 60%;
  background: linear-gradient(to right, #4a0404, #800000);
  z-index: 2;
  box-shadow: 5px 0 15px rgba(0,0,0,0.5);
}
.stage-curtain.left { left: 0; border-bottom-right-radius: 100px; }
.stage-curtain.right { right: 0; border-bottom-left-radius: 100px; background: linear-gradient(to left, #4a0404, #800000); }

/* 顶部 */
.header {
  height: 80px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 20px 0;
  background: linear-gradient(to bottom, #000, transparent);
  z-index: 10;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  font-size: 14px;
  color: #cbd5e1;
  backdrop-filter: blur(4px);
}
.back-arrow { margin-right: 4px; font-size: 12px; }

.title-box {
  text-align: center;
}
.title {
  display: block;
  font-size: 18px;
  color: #fdd835;
  font-weight: bold;
  letter-spacing: 1px;
}
.subtitle {
  display: block;
  font-size: 10px;
  color: #999;
  text-transform: uppercase;
}

.timer-box {
  display: flex;
  align-items: center;
  background: rgba(0,0,0,0.4);
  padding: 4px 10px;
  border-radius: 16px;
  border: 1px solid #555;
}
.timer-icon { margin-right: 4px; font-size: 12px; }
.timer-text { font-weight: bold; font-family: monospace; font-size: 16px; }
.timer-box.urgent {
  color: #ff5252;
  border-color: #ff5252;
  animation: pulse 0.8s infinite;
}

/* 舞台区 */
.stage {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #111;
  perspective: 1000px;
  overflow: hidden;
}

/* 聚光灯效果 */
.spotlight {
  position: absolute;
  top: -50px;
  left: 50%;
  transform: translateX(-50%);
  width: 300px;
  height: 600px;
  background: radial-gradient(ellipse at top, rgba(255, 255, 255, 0.15), transparent 70%);
  pointer-events: none;
  z-index: 1;
}

.stage-floor {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 30%;
  background: linear-gradient(to bottom, #222, #000);
  transform-origin: bottom;
  transform: rotateX(60deg);
  z-index: 0;
  border-top: 1px solid #333;
}

/* 角色容器 - 核心层叠逻辑 */
.character-box {
  width: 200px;
  height: 300px;
  position: relative;
  margin-bottom: 20px;
  z-index: 5;
  filter: drop-shadow(0 20px 30px rgba(0,0,0,0.8));
}

/* 通用图层样式 */
.layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1); /* 弹性动画 */
  pointer-events: none;
}

/* 0. 基础素体 (黑色剪影) */
.base-body {
  background-color: #0a0a0a;
  mask-image: linear-gradient(to bottom, black, black); 
  border-radius: 60px 60px 0 0;
  border: 1px solid #333;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: inset 0 0 30px rgba(0,0,0,0.8);
}
.placeholder-text {
  font-size: 60px;
  color: #222;
  font-weight: 900;
}

/* 1. 龙纹 (半透明纹理) */
.paint-layer {
  opacity: 0;
}
.paint-layer.show {
  opacity: 1;
}
.paint-pattern {
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 30% 30%, rgba(253, 216, 53, 0.2) 0%, transparent 20%),
    repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(253, 216, 53, 0.4) 10px, rgba(253, 216, 53, 0.4) 20px);
  border-radius: 60px 60px 0 0;
  mix-blend-mode: overlay;
}

/* 2. 牛角头饰 */
.head-layer {
  opacity: 0;
  transform: translateY(-50px) scale(0.8);
}
.head-layer.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}
.headwear-shape {
  width: 160%;
  height: 70px;
  background: linear-gradient(to bottom, #d32f2f, #b71c1c);
  margin-left: -30%;
  border-radius: 0 0 60px 60px;
  position: relative;
  top: -25px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.5);
}
.headwear-shape::before, .headwear-shape::after {
  content: '';
  position: absolute;
  top: -40px;
  width: 25px;
  height: 60px;
  background: linear-gradient(to bottom, #f5f5f5, #bdbdbd);
  border-radius: 4px;
}
.headwear-shape::before { left: 15px; transform: rotate(-25deg); }
.headwear-shape::after { right: 15px; transform: rotate(25deg); }

/* 3. 羽毛 */
.feather-layer {
  opacity: 0;
  transform: scale(0);
}
.feather-layer.show {
  opacity: 1;
  transform: scale(1);
}
.feather-shape {
  position: absolute;
  top: -60px;
  left: 50%;
  width: 12px;
  height: 80px;
  background: linear-gradient(to top, #ff9800, #4caf50);
  transform: translateX(-50%);
  box-shadow: -20px 15px 0 #2196f3, 20px 15px 0 #f44336;
  border-radius: 10px;
}

/* 4. 法器 */
.tool-layer {
  opacity: 0;
  transform: translateX(50px) rotate(45deg);
}
.tool-layer.show {
  opacity: 1;
  transform: translateX(0) rotate(0);
}
.tool-shape {
  position: absolute;
  bottom: 40px;
  right: -30px;
  width: 24px;
  height: 120px;
  background: linear-gradient(to right, #8d6e63, #5d4037);
  transform: rotate(-15deg);
  border-radius: 4px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
}
.tool-shape::before {
  content: '';
  position: absolute;
  top: -15px;
  left: -13px;
  width: 50px;
  height: 50px;
  background: radial-gradient(circle, #d32f2f, #b71c1c);
  border-radius: 50%;
  border: 2px solid #fdd835;
}

/* 成功光环 */
.aura {
  position: absolute;
  width: 100%;
  height: 100%;
  box-shadow: 0 0 60px 30px rgba(253, 216, 53, 0.4);
  border-radius: 60px 60px 0 0;
  animation: pulse-aura 2s infinite;
  z-index: -1;
}

/* 提示文字 */
.toast-msg {
  height: 30px;
  line-height: 30px;
  color: #ff5252;
  font-weight: bold;
  background: rgba(0,0,0,0.8);
  padding: 0 16px;
  border-radius: 20px;
  font-size: 12px;
  margin-top: 10px;
  border: 1px solid rgba(255, 82, 82, 0.3);
}
.toast-msg.shake {
  animation: shake 0.5s;
}

/* 道具栏 */
.inventory-panel {
  height: 260px;
  background: #1e1e1e;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -10px 40px rgba(0,0,0,0.6);
  z-index: 20;
}
.panel-title {
  font-size: 14px;
  color: #888;
  margin-bottom: 15px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.items-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 12px;
  overflow-y: auto;
}

.item-card {
  background: #2a2a2a;
  border: 1px solid #333;
  border-radius: 12px;
  padding: 10px;
  display: flex;
  align-items: center;
  position: relative;
  transition: all 0.2s;
}
.item-card:active { transform: scale(0.98); }

.item-card.equipped {
  background: #1a2e1a;
  border-color: #2e7d32;
}

.item-visual {
  width: 48px;
  height: 48px;
  background: #333;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
}
.item-icon {
  font-size: 28px;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.item-name {
  font-size: 14px;
  color: #eee;
  font-weight: bold;
}
.item-desc {
  font-size: 10px;
  color: #888;
  margin-top: 2px;
}
.checkmark {
  position: absolute;
  right: -5px;
  top: -5px;
}
.check-circle {
  width: 20px;
  height: 20px;
  background: #4caf50;
  color: white;
  border-radius: 50%;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.9);
  backdrop-filter: blur(8px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.modal {
  width: 80%;
  background: #1c1917;
  border: 1px solid #d32f2f;
  padding: 30px 24px;
  border-radius: 16px;
  text-align: center;
  position: relative;
  box-shadow: 0 20px 60px rgba(0,0,0,0.6);
}
.modal-header-deco {
  width: 60px;
  height: 4px;
  background: #d32f2f;
  margin: 0 auto 20px;
  border-radius: 2px;
}

.modal.success { border-color: #fdd835; }
.modal.fail { border-color: #f44336; }

.modal-title { font-size: 24px; color: #fdd835; margin-bottom: 20px; font-weight: bold; }
.modal-text { color: #ccc; font-size: 14px; line-height: 1.8; margin-bottom: 30px; white-space: pre-wrap; }
.highlight-text { color: #fdd835; font-size: 16px; font-weight: bold; }

.action-btn { 
  background: linear-gradient(to right, #b71c1c, #d32f2f); 
  color: #fff; 
  border-radius: 25px; 
  font-weight: bold;
  box-shadow: 0 5px 15px rgba(211, 47, 47, 0.4);
  border: none;
}

/* 动画关键帧 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  20%, 60% { transform: translateX(-5px); }
  40%, 80% { transform: translateX(5px); }
}
@keyframes pulse {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}
@keyframes pulse-aura {
  0% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
  100% { opacity: 0.6; transform: scale(1); }
}
